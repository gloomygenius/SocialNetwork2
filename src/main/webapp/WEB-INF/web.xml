    <!--Servlet naming-->

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.socialnetwork.controllers.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRecorder</servlet-name>
        <servlet-class>com.socialnetwork.controllers.UserRecorder</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>registration.jsp</servlet-name>
        <jsp-file>/jsp/registration.jsp</jsp-file>
    </servlet>
    <!--Servlet mapping-->
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserRecorder</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registration.jsp</servlet-name>
        <url-pattern>/regpage</url-pattern>
    </servlet-mapping>

    <!--Filters naming-->
    <filter>
        <filter-name>securityFilter</filter-name>
        <filter-class>com.socialnetwork.filters.SecurityFilter</filter-class>
    </filter>

    <filter>
        <filter-name>idPageFilter</filter-name>
        <filter-class>com.socialnetwork.filters.IdPageFilter</filter-class>
    </filter>

    <filter>
        <filter-name>setCharFilter</filter-name>
        <filter-class>com.socialnetwork.filters.SetCharFilter</filter-class>
    </filter>
    <!--Filters mapping-->
    <filter-mapping>
        <filter-name>securityFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/jsp/*</url-pattern>
        <url-pattern>/j_security_check</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>setCharFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>idPageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>